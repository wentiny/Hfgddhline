<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/tablelayoutbian_little_green"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="选择要搜索的数据类型" />
        <RadioGroup
            android:id="@+id/radio0304"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75" >
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textColor="@color/gray_666666"
                android:textSize="13dp"
                android:text="重点设备" />
            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textColor="@color/gray_666666"
                android:textSize="13dp"
                android:text="电缆路径" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/tablelayoutbian_little_blue"
            android:gravity="center"
            android:text="车间"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/tablelayoutbian_little_blue"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="工区" />

        <Spinner
            android:id="@+id/spinner11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"/>
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/tablelayoutbian_little_green"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="区间" />

        <Spinner
            android:id="@+id/spinner12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"/>

        <Button
            android:id="@+id/button16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/shape_btn_green"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="搜索" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview3"
        android:layout_width="match_parent"
        android:layout_height="203dp" />


</LinearLayout>
